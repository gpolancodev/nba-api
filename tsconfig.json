{
	"compilerOptions": {
		/* Language and Environment */
		"target": "es2016",

		/* Modules */
		"module": "commonjs",
		"rootDir": "src",

		"baseUrl": "./src",
		"resolveJsonModule": true,

		/* Emit */
		"outDir": "build",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,

		/* Completeness */
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
